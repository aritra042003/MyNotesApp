<Window x:Class="MyNotesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNotesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left side: Notes list -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Notes" FontSize="18" Margin="0,0,0,10"/>
            <ListBox x:Name="NotesList" Height="300" />
            <Button Content="Delete Note" Margin="0,10,0,0"
                Click="DeleteNote_Click"/>
        </StackPanel>

        <!-- Right side: Add note -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="Title"/>
            <TextBox x:Name="TitleBox"/>

            <TextBlock Text="Content" Margin="0,10,0,0"/>
            <TextBox x:Name="ContentBox" Height="150"
                 AcceptsReturn="True"/>

            <Button Content="Add Note" Margin="0,10,0,0"
                Click="AddNote_Click"/>
        </StackPanel>
    </Grid>

</Window>
